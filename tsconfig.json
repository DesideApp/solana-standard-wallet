{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "ES2022"],
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",                            // ðŸ‘ˆ aÃ±adido para alias
    "paths": {
      "@/*": ["src/*"]                         // ðŸ‘ˆ soporte para @/
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
